<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--<View-->
    <!--android:id="@+id/item_homepage_top_v"-->
    <!--android:layout_width="@dimen/dp_1"-->
    <!--android:layout_height="@dimen/dp_16"-->
    <!--android:background="@color/color_d1"-->
    <!--app:layout_constraintLeft_toLeftOf="@+id/item_homepage_circcle_v"-->
    <!--app:layout_constraintRight_toRightOf="@+id/item_homepage_circcle_v"/>-->

    <View
        android:id="@+id/item_homepage_circcle_v"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@drawable/shape_homepage_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_homepage_middle_v"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_0"
        android:background="@color/color_d1"
        app:layout_constraintBottom_toBottomOf="@+id/item_homepage_cl"
        app:layout_constraintLeft_toLeftOf="@+id/item_homepage_circcle_v"
        app:layout_constraintRight_toRightOf="@+id/item_homepage_circcle_v"
        app:layout_constraintTop_toBottomOf="@+id/item_homepage_circcle_v" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_homepage_cl"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/item_homepage_circcle_v"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/item_homepage_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/border_333"
            android:textSize="@dimen/sp_12"
            tools:text="@string/app_name" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:background="@android:color/white"
            android:padding="@dimen/dp_13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_homepage_time_tv">

            <TextView
                android:id="@+id/item_homepage_conent_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_fe"
                android:textSize="@dimen/sp_15"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/item_conent_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/font_black"
                android:textSize="@dimen/sp_15"
                app:layout_constraintTop_toBottomOf="@+id/item_homepage_conent_tv"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/item_homepage_onlookers_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="@string/going_onlookers"
                android:textColor="@color/color_fe"
                android:textSize="@dimen/sp_15"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_conent_tv" />


        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>