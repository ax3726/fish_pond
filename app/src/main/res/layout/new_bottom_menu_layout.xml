<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <!--1-->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_step1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.gofishfarm.htkj.widget.CompletedView
            android:id="@+id/completedview_step1_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:clickable="true"
            app:ContentTextColor="#fff"
            app:circleColor="#FBA168"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:radius="36dp"
            app:ringBgColor="#4dffffff"
            app:ringColor="#FF8336"
            app:showContent="上饵"
            app:strokeWidth="4dp" />

    </android.support.constraint.ConstraintLayout>
    <!--2-->
    <LinearLayout
        android:id="@+id/ll_step2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.gofishfarm.htkj.widget.CompletedView
            android:id="@+id/completedview_step2_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            app:ContentTextColor="#fff"
            app:circleColor="#FBA168"
            app:radius="26dp"
            app:ringBgColor="#4dffffff"
            app:ringColor="#FF8336"
            app:showContent="上饵"
            app:strokeWidth="4dp" />

        <com.gofishfarm.htkj.widget.CompletedView
            android:id="@+id/completedview_step2_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:clickable="true"
            app:ContentTextColor="#fff"
            app:circleColor="#FBA168"
            app:radius="36dp"
            app:ringBgColor="#4dffffff"
            app:ringColor="#FF8336"
            app:showContent="抛竿"
            app:strokeWidth="4dp" />

        <com.gofishfarm.htkj.widget.CompletedView
            android:id="@+id/completedview_step2_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            app:ContentTextColor="#fff"
            app:circleColor="#FBA168"
            app:radius="26dp"
            app:ringBgColor="#4dffffff"
            app:ringColor="#FF8336"
            app:showContent="抖饵"
            app:strokeWidth="4dp" />
    </LinearLayout>
