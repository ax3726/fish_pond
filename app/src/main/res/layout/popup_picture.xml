<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dp_10"
    >

    <TextView
        android:id="@+id/dialog_taking_pictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_white_pdtop_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:text="拍照"
        android:textColor="@color/border_333"
        android:textSize="@dimen/sp_18"
        />

    <View
        android:id="@+id/dialog_v"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_d8"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_taking_pictures"
        app:layout_constraintRight_toRightOf="@+id/dialog_taking_pictures"
        app:layout_constraintTop_toBottomOf="@+id/dialog_taking_pictures"/>

    <TextView
        android:id="@+id/dialog_choose_from_the_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_white_pdbot_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:text="从相册中选择"
        android:textColor="@color/border_333"
        android:textSize="@dimen/sp_18"
        app:layout_constraintTop_toBottomOf="@+id/dialog_v"
        />

    <TextView
        android:id="@+id/dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_white_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:text="取消"
        android:textColor="@color/color_66"
        android:textSize="@dimen/sp_18"
        app:layout_constraintTop_toBottomOf="@+id/dialog_choose_from_the_album"
        />

</android.support.constraint.ConstraintLayout>