<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_pond"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/iv_finsh_pond_item"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/rl_fish_pond_can_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_finsh_pond_item">

            <TextView
                android:id="@+id/tv_pond_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toLeftOf="@+id/tv_can_in"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="left|center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/font_black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/tv_can_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="6dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="9dp"
                android:gravity="center"
                android:text="进入"
                android:textColor="@color/font_gray"
                android:textSize="14dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_pond_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_fish_pond_can_in"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="9dp"
            android:gravity="center"
            android:textColor="@color/font_gray"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
