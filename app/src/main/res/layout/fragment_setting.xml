<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <android.support.v7.widget.LinearLayoutCompat

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:divider="@drawable/line"
        app:dividerPadding="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_like_cl"
        app:showDividers="middle|beginning|end">

        <RelativeLayout
            android:id="@+id/rl_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bg"
            android:paddingLeft="@dimen/padding_margin"
            android:paddingTop="@dimen/dp_20"
            android:paddingRight="@dimen/padding_margin"
            android:paddingBottom="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="软件升级"
                android:textColor="#ff333333"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/iv_uppdate"
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/my_jump_icon"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="11dp"
                android:layout_toLeftOf="@+id/iv_uppdate"
                tools:text="1.0.0"
                android:textColor="#ff999999"
                android:textSize="15sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bg"
            android:paddingLeft="@dimen/padding_margin"
            android:paddingTop="@dimen/dp_20"
            android:paddingRight="@dimen/padding_margin"
            android:paddingBottom="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="清除缓存"
                android:textColor="#ff333333"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/my_jump_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_about_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bg"
            android:paddingLeft="@dimen/padding_margin"
            android:paddingTop="@dimen/dp_20"
            android:paddingRight="@dimen/padding_margin"
            android:paddingBottom="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="关于我们"
                android:textColor="#ff333333"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/my_jump_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_service_protocol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bg"
            android:paddingLeft="@dimen/padding_margin"
            android:paddingTop="@dimen/dp_20"
            android:paddingRight="@dimen/padding_margin"
            android:paddingBottom="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="服务协议"
                android:textColor="#ff333333"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/my_jump_icon"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bg"
            android:paddingLeft="@dimen/padding_margin"
            android:paddingTop="@dimen/dp_20"
            android:paddingRight="@dimen/padding_margin"
            android:paddingBottom="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="退出登录"
                android:textColor="#FF2F2F"
                android:textSize="15sp"/>

            <ImageView
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/my_jump_icon"/>

        </RelativeLayout>

    </android.support.v7.widget.LinearLayoutCompat>
</ScrollView>