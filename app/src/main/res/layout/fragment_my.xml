<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ef"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/my_top_cl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_head_portrait_iv"
                android:layout_width="@dimen/dp_59"
                android:layout_height="@dimen/dp_59"
                android:layout_marginTop="@dimen/dp_15"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/my_name_tv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="@color/border_333"
                android:textSize="@dimen/sp_17"
                app:layout_constraintLeft_toRightOf="@+id/my_head_portrait_iv"
                app:layout_constraintRight_toLeftOf="@+id/my_right_tv"
                app:layout_constraintTop_toTopOf="@+id/my_head_portrait_iv"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/my_id_tv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_13"
                app:layout_constraintLeft_toRightOf="@+id/my_head_portrait_iv"
                app:layout_constraintRight_toLeftOf="@+id/my_right_tv"
                app:layout_constraintTop_toBottomOf="@+id/my_name_tv"
                tools:text="@string/app_name" />

            <ImageView
                android:id="@+id/my_right_tv"
                android:layout_width="@dimen/dp_9"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/my_jump_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <View
            android:id="@+id/my_top_v"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_ef"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_top_cl" />


        <android.support.constraint.ConstraintLayout
            android:id="@+id/my_fish_num_cl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/my_like_cl"
            app:layout_constraintTop_toBottomOf="@+id/my_top_v">

            <TextView
                android:id="@+id/my_fish_number_tv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/border_333"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/my_fish_num_num_tv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="@string/fish_get"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_fish_number_tv" />

        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout
            android:id="@+id/my_like_cl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            app:layout_constraintLeft_toRightOf="@+id/my_fish_num_cl"
            app:layout_constraintRight_toLeftOf="@+id/my_attention_cl"
            app:layout_constraintTop_toBottomOf="@+id/my_top_v">

            <TextView
                android:id="@+id/my_like_number_tv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/border_333"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/my_like_tv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="@string/like"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_like_number_tv" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/my_attention_cl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            app:layout_constraintLeft_toRightOf="@+id/my_like_cl"
            app:layout_constraintRight_toLeftOf="@+id/my_fan_cl"
            app:layout_constraintTop_toBottomOf="@+id/my_top_v">

            <TextView
                android:id="@+id/my_attention_number_tv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/border_333"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/my_attention_tv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="@string/attention"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_attention_number_tv" />


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/my_fan_cl"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_15"
            app:layout_constraintLeft_toRightOf="@+id/my_attention_cl"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_top_v">

            <TextView
                android:id="@+id/my_fan_number_tv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/border_333"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/my_fan_tv"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:text="@string/fen_si"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/my_fan_number_tv" />


        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@android:color/white"
            android:orientation="vertical"
            app:divider="@drawable/line"
            app:dividerPadding="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_like_cl"
            app:showDividers="middle|beginning">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_remaining_time_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_20">

                <TextView
                    android:id="@+id/my_remaining_time_tv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_sysc_icon"
                    android:drawablePadding="@dimen/dp_11"
                    android:text="@string/my_charge"
                    android:textColor="@color/border_333"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/my_remaining_time_content_tv" />

                <TextView
                    android:id="@+id/my_remaining_time_content_tv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/my_jump_icon"
                    android:drawablePadding="@dimen/dp_11"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/color_fe"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toRightOf="@+id/my_remaining_time_tv"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="@string/app_name" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_fishing_coin_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_20">

                <TextView
                    android:id="@+id/my_fishing_coin_tv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_wdyb_icon"
                    android:drawablePadding="@dimen/dp_11"
                    android:text="@string/my_fishing_coin"
                    android:textColor="@color/border_333"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/my_fishing_coin_content_tv" />

                <TextView
                    android:id="@+id/my_fishing_coin_content_tv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:drawableRight="@drawable/my_hot"
                    android:drawablePadding="@dimen/dp_6"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="@string/free_gift"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toRightOf="@+id/my_fishing_coin_tv"
                    app:layout_constraintRight_toLeftOf="@+id/my_tv" />

                <TextView
                    android:id="@+id/my_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/my_jump_icon"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toRightOf="@+id/my_fishing_coin_content_tv"
                    app:layout_constraintRight_toRightOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_invite_friends_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_20">

                <TextView
                    android:id="@+id/my_invite_friends_tv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_yqhy_icon"
                    android:drawablePadding="@dimen/dp_11"
                    android:text="@string/invite_friends"
                    android:textColor="@color/border_333"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/my_invite_friends_content_tv" />

                <TextView
                    android:id="@+id/my_invite_friends_content_tv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/my_jump_icon"
                    android:drawablePadding="@dimen/dp_11"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="@string/earn_money"
                    android:textColor="@color/color_fe"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toRightOf="@+id/my_invite_friends_tv"
                    app:layout_constraintRight_toRightOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_comment_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_20">

                <TextView
                    android:id="@+id/my_comment_tv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_gghp_icon"
                    android:drawablePadding="@dimen/dp_11"
                    android:text="@string/give_a_good_comment"
                    android:textColor="@color/border_333"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/my_comment_content_tv" />

                <TextView
                    android:id="@+id/my_comment_content_tv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/my_jump_icon"
                    android:drawablePadding="@dimen/dp_11"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/color_fe"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toRightOf="@+id/my_comment_tv"
                    app:layout_constraintRight_toRightOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/my_help_center_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bg"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_20"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_20">

                <TextView
                    android:id="@+id/my_help_center_tv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_bzzx_icon"
                    android:drawablePadding="@dimen/dp_11"
                    android:text="@string/help_center"
                    android:textColor="@color/border_333"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/my_help_center_content_tv" />

                <TextView
                    android:id="@+id/my_help_center_content_tv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/my_jump_icon"
                    android:drawablePadding="@dimen/dp_11"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/color_fe"
                    android:textSize="@dimen/sp_15"
                    app:layout_constraintLeft_toRightOf="@+id/my_help_center_tv"
                    app:layout_constraintRight_toRightOf="parent" />

            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.constraint.ConstraintLayout>

</ScrollView>
