<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="@dimen/dp_37">

    <TextView
        android:id="@+id/vc_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入验证码"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/vc_phone_tv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/color_99"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vc_title_tv"
        tools:text="@string/app_name"
        />

    <TextView
        android:id="@+id/vc_error_tv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="@dimen/sp_12"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vc_phone_tv"
        tools:text="@string/app_name"
        android:textColor="@color/color_ff2"
        />

    <com.gofishfarm.htkj.custom.VerificationCodeEditText
        android:id="@+id/vc_verification_vcet"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_45"
        app:bottomLineHeight="@dimen/dp_1"
        app:bottomLineNormalColor="@color/color_d8"
        app:figures="4"
        app:key_xml="@xml/keyboard"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vc_error_tv"
        app:selectedBackgroundColor="@color/color_fe"
        app:verCodeMargin="@dimen/dp_20"/>

    <TextView
        android:id="@+id/vc_resend_tv"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/resend"
        android:textSize="@dimen/sp_15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vc_verification_vcet"
        android:textColor="@color/color_fe"
        />


</android.support.constraint.ConstraintLayout>